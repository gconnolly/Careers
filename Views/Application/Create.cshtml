@model Careers.Models.ApplicationCreateViewModel

@{
    ViewBag.Title = "Careers";
}

<h2>Apply to {Blah}</h2>

@using (Html.BeginForm("Create", "Application", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label class="col-md-2 control-label">Browse</label>
        <div class="col-md-10">
            <input type="file" name="file" />
            <input type="hidden" value="@Model.UserId" name="userId" />
            <input type="hidden" value="@Model.PositionId" name="positionId" />
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>
}