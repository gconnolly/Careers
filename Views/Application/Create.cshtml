@model Careers.Models.ApplicationViewModel

@{
    ViewBag.Title = "Add New Position";
}

<h2>Apply to @Model.PositionTitle</h2>
<hr />

@using (Html.BeginForm("Create", "Application", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <label class="col-md-2 control-label">Upload Resume</label>
        <div class="col-md-10">
            <input type="file" name="file" accept="application/pdf" />
            @Html.HiddenFor(m => m.PositionId)
            @Html.HiddenFor(m => m.UserId)
        </div>
    </div>
    
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Upload" class="btn btn-default" />
        </div>
    </div>
}